<h2>New Song</h2>

<%= form_for @song do |f| %>
    <% if @song.errors.any? %>
    <h2>Errors:</h2>
    <ul>
        <% @song.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
    </ul>
    <% end %>

    <%= f.label :title, 'Title' %>
    <%= f.text_field :title %>
<br>
    <%= f.label :released, 'Released' %>
    <%= f.check_box :released %>
<br>
    <%= f.label :release_year, 'Release Year' %>
    <%= f.number_field :release_year %>
<br>
    <%= f.label :artist_name, 'Artist Name' %>
    <%= f.text_field :artist_name %>
<br>
    <%= f.label :genre, 'Genre' %>
    <%= f.text_field :genre %>
<br>
    <%= f.submit %>
<% end %>